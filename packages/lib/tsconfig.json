{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    // composite is useful for referenced packages. see https://www.typescriptlang.org/docs/handbook/project-references.html#composite
    "composite": true
  },
  "include": ["src/**/*.ts","src/**/*.tsx"],
  "paths": {
    "lib/*": ["./src/*"],
    "@packages/lib/*": ["./src/*"],
  },
  "exclude": ["jest.config.ts"]
}
