{
  "extends": "../../.eslintrc.json",
  "parserOptions": {
    "project": ["./tsconfig.json", "apps/connect-api/tsconfig.json", "../../tsconfig.json"]
  },
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "packageDir": ["./", "../../"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "apps/connect-api/tsconfig.json"
      }
    }
  }
}
