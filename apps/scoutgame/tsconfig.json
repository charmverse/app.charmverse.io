{
  "compilerOptions": {
    "declarationMap": true,
    "declaration": true,
    "rootDir": "../../",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "apiClient/*": ["./apiClient/*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      "lib/*": ["./lib/*"],
      "public/*": ["./public/*"],
      "theme/*": ["./theme/*"],
      "@root/adapters/http": ["../../adapters/http"],
      "@root/config/constants": ["../../config/constants"],
      "@root/connectors/chains": ["../../connectors/chains"],
      "@root/abis/*": ["../../abis/*"],
      "@root/lib/*": ["../../lib/*"],
      "@charmverse/core/prisma": ["../../node_modules/@charmverse/core/dist/cjs/prisma"],
      "@charmverse/core/prisma-client": ["../../node_modules/@charmverse/core/dist/cjs/prisma-client"],
      "@charmverse/core/log": ["../../node_modules/@charmverse/core/dist/cjs/lib/log"],
      "@charmverse/core/utilities": ["../../node_modules/@charmverse/core/dist/cjs/utilities"],
      "@charmverse/core/errors": ["../../node_modules/@charmverse/core/dist/cjs/errors"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/scoutgame/src/utils/generateRandomName.ts"
  ],
  "exclude": ["../../node_modules", ".next/", "public/sw.js", "sw.js"]
}
