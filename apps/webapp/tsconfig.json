{
  "ts-node": {
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "commonjs",
      "jsxImportSource": ""
    },
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "strict": true,
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      // "@packages/charmeditor/*": ["./packages/charmeditor/src/*"],
      // "@packages/utils/*": ["./packages/utils/src/*"],
      // "@packages/github/*": ["./packages/github/src/*"],
      // "@packages/farcaster/*": ["./packages/farcaster/src/*"],
      // "@packages/aws/*": ["./packages/aws/src/*"],
      // "@packages/connect-shared/*": ["./packages/connect-shared/src/*"],
      // "@packages/blockchain/*": ["./packages/blockchain/src/*"],
      // "@packages/credentials/*": ["./packages/credentials/src/*"],
      // "@packages/features/*": ["./packages/features/src/*"],
      // "@packages/metrics/*": ["./packages/metrics/src/*"],
      // "@packages/metrics": ["./packages/metrics/src/metrics.ts"],
      // "@packages/pages/*": ["./packages/pages/src/*"],
      // "@packages/profile/*": ["./packages/profile/src/*"],
      // "@packages/profile": ["./packages/profile/src/index.ts"],
      // "@packages/users/*": ["./packages/users/src/*"],
      // "@packages/nextjs/*": ["./packages/nextjs/src/*"],
      // "@packages/testing/*": ["./packages/testing/src/*"],
      // "@root/abis/*": ["./abis/*"],
      // "@root/adapters/*": ["./adapters/*"],
      // "@root/config/*": ["./config/*"],
      // "@root/lib/*": ["./lib/*"],
      // "config/*": ["./config/*"],
      "scripts/*": ["./scripts/*"],
      "lib/*": ["./lib/*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      // "abis/*": ["./abis/*"],
      "pages/*": ["./pages/*"],
      "public/*": ["./public/*"],
      "theme/*": ["./theme/*"],
      "testing/*": ["./testing/*"],
      "__e2e__/*": ["./__e2e__/*"],
      "@charmverse/core/prisma": ["../../node_modules/@charmverse/core/dist/cjs/prisma"],
      "@charmverse/core/prisma-client": ["../../node_modules/@charmverse/core/dist/cjs/prisma-client"],
      "@charmverse/core/shared": ["../../node_modules/@charmverse/core/dist/cjs/shared"],
      "@charmverse/core/log": ["../../node_modules/@charmverse/core/dist/cjs/lib/log"],
      "@charmverse/core/http": ["../../node_modules/@charmverse/core/dist/cjs/http"],
      "@charmverse/core/test": ["../../node_modules/@charmverse/core/dist/cjs/test"],
      "@charmverse/core/permissions": ["../../node_modules/@charmverse/core/dist/cjs/permissions"],
      "@charmverse/core/permissions/flags": ["../../node_modules/@charmverse/core/dist/cjs/permissions-flags"],
      "@charmverse/core/pages": ["../../node_modules/@charmverse/core/dist/cjs/pages"],
      "@charmverse/core/pages/utilities": ["../../node_modules/@charmverse/core/dist/cjs/pages-utilities"],
      "@charmverse/core/proposals": ["../../node_modules/@charmverse/core/dist/cjs/proposals"],
      "@charmverse/core/bounties": ["../../node_modules/@charmverse/core/dist/cjs/bounties"],
      "@charmverse/core/utilities": ["../../node_modules/@charmverse/core/dist/cjs/utilities"],
      "@charmverse/core/protocol": ["../../node_modules/@charmverse/core/dist/cjs/protocol"],
      "@charmverse/core/errors": ["../../node_modules/@charmverse/core/dist/cjs/errors"]
    }
  },
  "exclude": ["node_modules", "scripts"],
  "include": ["**/*.ts", "**/*.tsx"]
}
