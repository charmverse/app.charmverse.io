{
  "ts-node": {
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "commonjs",
      "jsxImportSource": ""
    },
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true
  },
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "strict": true,
    "target": "es2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "config/*": [
        "./config/*"
      ],
      "lib/*": [
        "./lib/*",
      ],
      "adapters/*": [
        "./adapters/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "abis/*": [
        "./abis/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "public/*": [
        "./public/*"
      ],
      "theme/*": [
        "./theme/*"
      ],
      "testing/*": [
        "./testing/*"
      ],
      "__e2e__/*": [
        "./__e2e__/*"
      ],
      "@charmverse/core/dist/prisma": [
        "node_modules/@charmverse/core/dist/cjs/prisma",
        //"node_modules/@charmverse/core/dist/esm/prisma"
      ],
      "@charmverse/core/dist/shared": [
        "node_modules/@charmverse/core/dist/cjs/shared",
        //"node_modules/@charmverse/core/dist/esm/shared"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/focalboard/src/**/*.spec.ts",
    "**/focalboard/src/**/*.spec.tsx"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}