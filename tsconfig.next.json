{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "__e2e__",
    "apps"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "@root/abis/*": [
        "./abis/*"
      ],
      "@root/adapters/*": ["./adapters/*"],
      "@root/connectors/*": ["./connectors/*"],
      "@root/config/*": ["./config/*"],
      "@root/lib/*": ["./lib/*"],
      "@charmverse/core/prisma": [
        "node_modules/@charmverse/core/dist/esm/prisma"
      ],
      "@charmverse/core/prisma-client": [
        "node_modules/@charmverse/core/dist/esm/prisma-client"
      ],
      "@charmverse/core/shared": [
        "node_modules/@charmverse/core/dist/esm/shared"
      ],
      "@charmverse/core/log": [
        "node_modules/@charmverse/core/dist/esm/lib/log",
      ],
      "@charmverse/core/http": [
        "node_modules/@charmverse/core/dist/cjs/http"
      ],
      "@charmverse/core/test": [
        "node_modules/@charmverse/core/dist/esm/test"
      ],
      "@charmverse/core/permissions": [
        "node_modules/@charmverse/core/dist/esm/permissions"
      ],
      "@charmverse/core/permissions/flags": [
        "node_modules/@charmverse/core/dist/esm/permissions-flags"
      ],
      "@charmverse/core/pages": [
        "node_modules/@charmverse/core/dist/esm/pages"
      ],
      "@charmverse/core/pages/utilities": [
        "node_modules/@charmverse/core/dist/esm/pages-utilities"
      ],
      "@charmverse/core/proposals": [
        "node_modules/@charmverse/core/dist/esm/proposals"
      ],
      "@charmverse/core/bounties": [
        "node_modules/@charmverse/core/dist/esm/bounties"
      ],
      "@charmverse/core/utilities": [
        "node_modules/@charmverse/core/dist/esm/utilities"
      ],
      "@charmverse/core/errors": [
        "node_modules/@charmverse/core/dist/esm/errors"
      ]
    }
  }
}